{
  "manifest_version": 2,

  "name": "ProSistant",
  "description": "Welcome to your ProSistant",
  "version": "1.0",
  "icons": { "150": "150_Logo.png" },
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "19_logo.png",
    "default_popup": "popup.html",
    "default_title": "ProSistant"
  }
}
